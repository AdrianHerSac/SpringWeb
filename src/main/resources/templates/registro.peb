<!DOCTYPE html>
<html lang="es">
<head>
    <title>Unirse al Clan</title>
    {% include "fragments/head" %}
</head>
<body>

    {% include "fragments/nav" %}

    <!-- CONTENEDOR CENTRADO -->
    <div class="main-content-centered">

        <div class="login-card">
            <h1>Nuevo Recluta</h1>

            {% if error != null %}
                <div class="alert-error mb-3">
                    <i class="bi bi-x-circle-fill"></i> {{ error }}
                </div>
            {% endif %}

            <form action="/registro" method="post">
                <input type="hidden" name="{{ _csrf.parameterName }}" value="{{ _csrf.token }}"/>

                <div class="mb-3">
                    <input type="text" name="username" class="form-control" placeholder="Elige tu nombre vikingo" required>
                </div>
                <div class="mb-3">
                    <input type="password" name="password" class="form-control" placeholder="Contraseña secreta" required>
                </div>

                <button type="submit" class="btn btn-gold">Juramento de Lealtad</button>
            </form>

            <div class="mt-4 border-top border-secondary pt-3">
                <span class="text-white-50 small">¿Ya tienes clan?</span><br>
                <a href="/login" class="text-warning text-decoration-none fw-bold">Entrar</a>
            </div>
        </div>

    </div>

    {% include "fragments/footer" %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>